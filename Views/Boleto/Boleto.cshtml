@{
    ViewData["Title"] = "Preencher Boleto";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SistemaWebGestao</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main role="main" class="pb-3">
        <div class="container">
            <h2>Preencher Boleto</h2>
            <form asp-action="PreencherBoleto" method="post">
                <div class="form-group">
                    <label for="numeroBoleto">NÃºmero do Boleto:</label>
                    <input type="text" class="form-control" id="numeroBoleto" name="NumeroBoleto" required />
                </div>
                <div class="form-group">
                    <label for="valor">Valor:</label>
                    <input type="text" class="form-control" id="valor" name="Valor" required />
                </div>
                <div class="form-group">
                    <label for="vencimento">Data de Vencimento:</label>
                    <input type="date" class="form-control" id="vencimento" name="Vencimento" required />
                </div>
                <button type="submit" class="btn btn-primary">Enviar Boleto</button>
            </form>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 - SistemaWebGestao</p>
    </footer>
</body>
</html>
